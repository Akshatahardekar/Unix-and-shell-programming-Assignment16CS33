#include<stdio.h>
#include<stdlib.h>
#include<math.h>

void main()
{
	float , s , r , area , cir;
	int d;
	
	printf("Enter the area of the square:");
	scanf("%d" , &d);
	
	a = sqrt(d);
	
	for(i = 0 ; i < 20 ; i++)
	{
		if(a == i)
			break;
	}
	
	s = sqrt(d);
	
	r = s*(sqrt(2));
	
	r1 = r/2
	
	area = 3.142*pow(r , 2);
	
	printf("Area of the circle inscribed is: %.2f" , area);
	
	cir = 2 * 3.142 * r;
	
	printf("Circumference of the circle is %.2f" , cir);
}
